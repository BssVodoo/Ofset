@model _360Ofset.Models.ImagesDB

@{
    ViewBag.Title = "Slider Yonetim";
    Layout = "~/Views/Shared/_Alayout.cshtml";
}


<form action="/Admin/ImageUpload" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ResimUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <input type="file" name="uploadfile" id="uploadfile" />
                @Html.ValidationMessageFor(model => model.ResimUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RBaslik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RBaslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RBaslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RAciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.RAciklama, new { htmlAttributes = new { @class = "form-control", @style = "margin:0px; width:387px; height:69px;" } })
                @Html.ValidationMessageFor(model => model.RAciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
<table class="table table-striped" style="width:552px; height:100px;">
    <thead>
        <tr>
            <th style="width:188px;">
                Resim
            </th>
            <th style="width:188px;">
                Resim Başlığı
            </th>

            <th style="width:188px;">
                Resim Açıklaması
            </th>
            <th style="width:188px;">
                İşlem
            </th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.Slider)
    {
        <tbody>
            <tr>
                <td style="width:188px;">
                    <img src="@item.ResimUrl" alt="" style="width:100px; height:100px;" />
                </td>
                <td style="width:188px;">
                    <div class="gdl-slider-title">@item.RBaslik</div>
                </td>

                <td style="width:188px;">
                    @item.RAciklama
                </td>
                <td style="width:188px;">
                    @Html.ActionLink("Sil", "SliderSil", new { @item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
            }
    </table>
